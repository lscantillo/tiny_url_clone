<div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Website</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><%= @url.url %></h1>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
          <div class="card-header py-3">
            <h4 class="my-0 fw-normal">Visitors</h4>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title"><%= @url.visit_count %></h1>
            <ol class="list-unstyled mt-3 mb-4">
              <% @visitors_ip.each do |v| %>
                <li> <%= v.ip %></li>
              <% end %>
            </ol>
          </div>
        </div>
      </div>
    </div>